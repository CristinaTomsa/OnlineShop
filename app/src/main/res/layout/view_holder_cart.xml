<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/image_product_cart"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/noimage"/>

    <LinearLayout
        android:id="@+id/layout_cart_description"
        android:layout_toRightOf="@+id/image_product_cart"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_cart_name"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_cart_price"
            android:textSize="15dp"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/button_delete"
        android:backgroundTint="#fff"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/layout_cart_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#cacaca"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/view2"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_minus"
            android:src="@drawable/ic_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_qtyu"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center_horizontal"
            android:text="0"
            android:minWidth="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_add"
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

