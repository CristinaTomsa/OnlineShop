<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/image_product_cart"
        android:layout_width="150dp"
        android:layout_height="125dp"/>

    <LinearLayout
        android:id="@+id/layout_cart_description"
        android:layout_toRightOf="@+id/image_product_cart"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_cart_name"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_cart_price"
            android:textSize="15dp"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_cart_mrp"
            android:textSize="12dp"
            android:textColor="#f00"
            android:text="mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_delete"
        android:backgroundTint="#fff"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/layout_cart_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_decrease_cart"
        android:layout_marginTop ="50dp"
        android:text="-"
        android:textStyle="bold"
        android:backgroundTint="@color/colorAccent"
        android:layout_toRightOf="@+id/layout_cart_description"
        android:layout_width="35dp"
        android:layout_height="35dp"/>


    <TextView
        android:id="@+id/text_view_quantity_cart"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="0"
        android:layout_marginTop="52dp"
        android:layout_toRightOf="@+id/button_decrease_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_increase_cart"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_toRightOf="@+id/text_view_quantity_cart"
        android:text="+"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_below="@+id/image_product_cart"
        android:background="#000" />


</RelativeLayout>